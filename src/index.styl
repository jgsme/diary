html, body
  padding 0
  margin 0
  background #f3f3f3
  font-family serif
  color #282828
  width 100%
  min-width 700px
  letter-spacing -0.02em
  line-height 1.4
  font-size 18px

  a
    color #282828
    &:hover
      color #575757

  blockquote
    border-left #cbcbcb 5px solid
    padding-left 1em

  .date
    padding-left 8%
    font-family sans-serif
    font-weight 700
    font-size 1.6em
    color #fff

    a
      text-decoration none
      color #fff

  .caption
    width 82%
    padding-left 8%
    max-width 900px

  .post
    margin-bottom 10em

@import 'header/*'
@import 'posts/**/*'
