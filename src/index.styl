html, body
  padding 0
  margin 0
  background #f3f3f3
  font-family serif
  color #282828
  width 100%
  letter-spacing -0.02em
  line-height 1.4
  font-size 18px

  a
    color #282828
    &:hover
      color #575757

  .date
    padding-left 8%
    font-family sans-serif
    font-weight 700
    font-size 1.6em
    color #fff

    a
      text-decoration none
      color #fff

@import 'header/*'
@import 'posts/**/*'
